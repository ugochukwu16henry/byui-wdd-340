<% layout('layouts/layout') %>

    <section class="hero">
        <h2>Welcome to CSE Motors!</h2>
        <div class="hero-content">
            <div class="hero-text">
                <h3>DMC Delorean</h3>
                <ul>
                    <li>3 Cup holders</li>
                    <li>Superman doors</li>
                    <li>Fuzzy dice!</li>
                </ul>
                <a href="#" class="btn-primary">Own Today</a>
            </div>
            <div class="hero-image">
                <img src="/public/images/vehicles/delorean.jpg" alt="DMC Delorean car">
            </div>
        </div>
    </section>

    <section class="features">
        <div class="upgrades">
            <h3>Delorean Upgrades</h3>
            <ul class="upgrade-list">
                <li>
                    <img src="/public/images/upgrades/flux-cap.png" alt="Flux Capacitor">
                    <a href="#">Flux Capacitor</a>
                </li>
                <li>
                    <img src="/public/images/upgrades/flame.jpg" alt="Flame Decals">
                    <a href="#">Flame Decals</a>
                </li>
                <li>
                    <img src="/public/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
                    <a href="#">Bumper Stickers</a>
                </li>
                <li>
                    <img src="/public/images/upgrades/hub-cap.jpg" alt="Hub Caps">
                    <a href="#">Hub Caps</a>
                </li>
            </ul>
        </div>

        <div class="reviews">
            <h3>DMC Delorean Reviews</h3>
            <ul>
                <li>"So fast it's almost like traveling in time." (4/5)</li>
                <li>"Coolest ride on the road." (4/5)</li>
                <li>"I'm feeling McFly!" (5/5)</li>
                <li>"The most futuristic ride of our day." (4.5/5)</li>
                <li>"80's livin and lovin it!" (5/5)</li>
            </ul>
        </div>
    </section>