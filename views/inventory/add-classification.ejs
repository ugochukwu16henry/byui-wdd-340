<main>
    <h1>Add Classification</h1>

    <% if (errors && errors.length) { %>
        <ul class="errors">
            <% errors.forEach(err=> { %>
                <li>
                    <%= err.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/add-classification" method="post" novalidate>
                <label for="classification_name">Classification name (no spaces or special characters):</label>
                <input id="classification_name" name="classification_name" type="text" required pattern="[A-Za-z0-9]+"
                    title="No spaces or special characters"
                    value="<%= classification_name ? classification_name : '' %>" />
                <button type="submit">Add Classification</button>
            </form>
</main>