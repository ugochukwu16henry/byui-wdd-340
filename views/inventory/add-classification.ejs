<main>
    <h1 class="add">Add New Classification</h1>

    <a href="/inv" class="back-button">‚Üê Back to Management</a>

    <%# Flash Messages (Success/Failure) %>
        <%- messages() %>

            <%# Server-Side Validation Errors %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <%# Task Requirement: User Instruction %>
                            <p class="form-instructions">
                                The new classification name cannot contain spaces or special characters of any kind.
                            </p>

                            <form class="add-classification-form" action="/inv/add-classification" method="post">
                                <label for="classification_name">Classification Name</label>
                                <input type="text" name="classification_name" id="classification_name" required <%# Task
                                    Requirement: Client-side validation pattern %>
                                pattern="[A-Za-z0-9]+"
                                title="Only letters and numbers are allowed, with no spaces."
                                value="<%= locals.classification_name %>"
                                    >

                                    <button type="submit">Add Classification</button>
                            </form>
</main>