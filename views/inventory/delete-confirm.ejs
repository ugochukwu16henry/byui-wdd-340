<main>
    <a href="/inv" class="back-button">‚Üê Back to Management</a>

    <h1 class="add">
        <%= title %>
    </h1>

    <%# Flash Messages (Success/Failure) %>
        <%- messages() %>

            <p>Confirm deletion of this vehicle. This action cannot be undone.</p>

            <form class="add-inventory-form" action="/inv/delete" method="POST">

                <fieldset>
                    <legend>Vehicle Details</legend>

                    <label for="inv_make">Make</label>
                    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

                    <label for="inv_model">Model</label>
                    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

                    <label for="inv_year">Year</label>
                    <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

                    <label for="inv_price">Price</label>
                    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly>

                    <button type="submit" class="delete-button">Confirm Deletion</button>

                    <%# CRITICAL: The hidden ID field is required for the controller to know which item to delete %>
                        <input type="hidden" name="inv_id" value="<%= inv_id %>">

                </fieldset>

            </form>
</main>